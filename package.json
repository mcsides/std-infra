  "scripts": {
    "tf:init": "cd envs/stg && terraform init",
    "tf:plan": "cd envs/stg && terraform plan",
    "tf:apply": "cd envs/stg && terraform apply --auto-approve",
    "tf:destroy": "cd envs/stg && terraform destroy --auto-approve",
    "tf:output": "cd envs/stg && terraform output",
    "tf:format": "terraform fmt -recursive",
    "tf:format:check": "terraform fmt -recursive -check"
  }
}
